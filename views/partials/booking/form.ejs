<div id="popup" class="popup">
    <div class="popup-overlay"></div>
    <div class="popup-content">
        <a href="#" class="close-popup" data-id="popup" data-animation="scale">&times;</a>
        <div class="container" id="info-order" style="display:block;">
            <h2 class="text-center">Information</h2>
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-12 pb-5">

                    <!--Form with header-->
                    <form action="" method="post">
                        <div class="card border-primary rounded-0">
                            <div class="card-header p-0">
                                <div class="bg-info text-white text-center py-2">
                                    <h3><i class="fa fa-envelope"></i> Your Booking</h3>
                                    <p class="m-0">Booking Detail</p>
                                </div>
                            </div>
                            <div class="card-body p-3">
                                <!--Body-->
                                <div class="form-group">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                                        </div>
                                        <%- include('./dateBooking.ejs')%>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                                        </div>

                                        <%- include('./timeBooking.ejs')%>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                                        </div>

                                        <%- include('./capacityBooking.ejs')%>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                                        </div>
                                        <input type="text" class="form-control" id="fullname-form" name="fullname"
                                            placeholder="Full Name..." required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-envelope text-info"></i></div>
                                        </div>
                                        <input type="email" class="form-control" id="email-form" name="email"
                                            placeholder="Email..." required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-volume-control-phone text-info"></i></div>
                                        </div>
                                        <input type="text" class="form-control" id="phone-form" name="phone"
                                            placeholder="Phone..." required>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <input type="button" value="Booking" id="booking-form" class="btn btn-info btn-block rounded-0 py-2"
                                        class="booking-form">
                                </div>
                            </div>
                        </div>
                    </form>
                    <!--Form with header-->

                </div>
            </div>
        </div>

        <div class="container-preview" id="info-confirm" style="display:none;">
            <div class="confirm form-confirm">
                <h3 class='confirm-h3'>Confirm</h3>
                <p class="confirm-p">Status</p>
                <input class="w100 input-confirm" type="text" placeholder="Store" id="confirm-store" disabled autocomplete='off' />
                <input class="w100 input-confirm" type="text" placeholder="Datetime" id="confirm-day" disabled />
                <input class="w100 input-confirm" type="text" placeholder="Time" id="confirm-time" disabled />
                <input class="w100 input-confirm" type="text" placeholder="Capacity" id="confirm-capacity" disabled />
                <input class="w100 input-confirm" type="text" placeholder="Name" id="confirm-name" disabled />
                <button class="form-btn sx confirm-button-after" type="button">Animation</button>
                <button class="form-btn dx" type="submit">Confirm</button>
            </div>
            <div class="animate form-confirm">
                <img src="https://i.giphy.com/media/lGiCsPNkHIME/giphy.webp" alt="animate" width="280px;" height="350px;">
                <button class="form-btn sx back" type="button">Confirm</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(".confirm-button-after").click(function () {
        $(".animate").addClass("active-dx");
        $(".confirm").addClass("inactive-sx");
        $(".confirm").removeClass("active-sx");
        $(".animate").removeClass("inactive-dx");
    });

    $(".back").click(function () {
        $(".confirm").addClass("active-sx");
        $(".animate").addClass("inactive-dx");
        $(".animate").removeClass("active-dx");
        $(".confirm").removeClass("inactive-sx");
    });
</script>